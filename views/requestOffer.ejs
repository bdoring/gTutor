<% include ../partials/header %>
<link rel="stylesheet" href="/css/style_login.css">

    <div class="container">
      <div class="row">
        <div id="campus" class="center-align white-text">
          <h5>Phoenix Campus</h5>
        </div>
      </div>

      <div class="row">
        <div id="body-heading" class="center-align">
          <h3>Code Assistance Tutor Response</h3>
        </div>
      </div>

      <!-- START TABLE -->
      <div class="row">
        <div class="table-container col s8 offset-s2 table z-depth-2">

          <div class="row">
            <h4 class="request-offer-headers">Request Details</h4>
          </div>

          <div id="request-offer-top" class="row">
            <table class="">
              <tr>
                <td class="col-header">Name:</td>
                <td class="col-data"><%= post.first_name %> <%= post.last_name %></td>
                <td class="col-empty"></td>
                <td class="col-header">Request ID:</td>
                <td class="col-data2">#<%= post.id %></td>
              </tr>
              <tr>
                <td class="col-header">gStatus:</td>
                <td class="col-data"><%= post.type %> (<%= post.cohort %>)</td>
                <td class="col-empty"></td>
                <td class="col-header">Title:</td>
                <td class="col-data2"><%= post.title %></td>
              </tr>
              <tr>
                <td class="col-header">Availability:</td>
                <td class="col-data">10/30/2017 10/31/2017</td>
                <td class="col-empty"></td>
                <td class="col-header">Description:</td>
                <td class="col-data2"><%= post.content %></td>
              </tr>
              <tr>
                <td class="col-header">Timeframe:</td>
                <td class="col-data">4:15pm - 8:00pm</td>
              </tr>
            </table>
          </div>

          <hr class="z-depth-5">

          <div class="row">
            <h4 class="request-offer-headers">Tutor Details</h4>
          </div>

          <div class="row" id="request-offer-mid">
            <table class="">
              <tr>
                <td class="col-header">Name:</td>
                <td class="col-data"><%= user.first_name%> <%= user.last_name%></td>
                <td class="col-empty"></td>
                <td class="col-header">Email:</td>
                <td class="col-data2"><%= user.email %></td>
              </tr>
            </table>
          </div>

          <hr class="z-depth-5">

          <div class="row">
            <h4 class="request-offer-headers">Additional Comments</h4>
          </div>

          <div class="row add-comments-div">
            <form id="request-offer-bottom" class="col s12 request-offer-form" action="/gTutor/posts/help/<%=post.id%>" method="post">
              <div class="row">
                <div class="input-field col s12">
                  <input id="request_title" type="text" class="validate" name="message" placeholder="Enter comments for your tutor">
                </div>
              </div>
          </div>

          <div class="row accept-rejection">
            <button id="btn-accept-offer" class="waves-effect waves-light btn col s6" type="submit" value="Login">Confirm Tutoring Session</button>
            <a href="/gTutor/posts" id="btn-reject-offer" class="waves-effect waves-light btn col s6 red lighten-2" type="submit" value="Login">Reject Tutoring Session</a>
          </div>

      </form>
      </div>
    </div>


    <!-- END container -->
    </div>

<footer class="page-footer">
 <div class="container">
   <div class="row">
     <div class="center-align">
       <h5 class="white-text"> a <span style="color:#e9933e;">galvanize</span> student project</h5>
     </div>
   </div>
 </div>

