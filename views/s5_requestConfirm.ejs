  <body>
    <nav class="nav-wrapper">
        <div id="nav-img" class="brand-logo center"></div>
        <div class="nav-heading">
          <h1 id="nav-heading" class="brand-logo center">gTutor</h1>
        </div>
    </nav>

    <div class="container">
      <div class="row">
        <div id="campus" class="center-align white-text">
          <h5>Phoenix Campus</h5>
        </div>
      </div>

      <div class="row">
        <div id="body-heading" class="center-align">
          <h3>Code Assistance Tutor Response</h3>
        </div>
      </div>

      <!-- START TABLE -->
      <div class="row">
        <div class="table-container col s8 offset-s2 table z-depth-2">

          <div class="row">
            <h4 class="request-offer-headers">Request Details</h4>
          </div>

          <div class="row">
            <table id="request-offer-top">
              <tr>
                <td class="col-header">Name:</td>
                <td class="col-data">John Doe</td>
                <td class="col-empty"></td>
                <td class="col-header">Request ID:</td>
                <td class="col-data2">#004</td>
              </tr>
              <tr>
                <td class="col-header">gStatus:</td>
                <td class="col-data">Student (g66)</td>
                <td class="col-empty"></td>
                <td class="col-header">Title:</td>
                <td class="col-data2">JavaScript -- Help with accumulator patterns</td>
              </tr>
              <tr>
                <td class="col-header">Availability:</td>
                <td class="col-data">10/30/2017 10/31/2017</td>
                <td class="col-empty"></td>
                <td class="col-header">Description:</td>
                <td class="col-data2">Struggling with understanding and implementing accumulator patterns and iterating through arrays.</td>
              </tr>
              <tr>
                <td class="col-header">Timeframe:</td>
                <td class="col-data">4:15pm - 8:00pm</td>
              </tr>
            </table>
          </div>

          <hr>

          <div class="row">
            <h4 class="request-offer-headers">Tutor Details</h4>
          </div>

          <div class="row">
            <table id="request-offer-mid">
              <tr>
                <td class="col-header">Name:</td>
                <td class="col-data">John Doe</td>
                <td class="col-empty"></td>
                <td class="col-header">Email:</td>
                <td class="col-data2">robert.kirby@helpforyou.com</td>
              </tr>
            </table>
          </div>

          <hr>

          <div class="row">
            <h4 class="request-offer-headers">Additional Comments</h4>
          </div>

          <div class="row add-comments-div">
            <form id="request-offer-bottom" class="col s12 request-offer-form" action="#" method="">
              <div class="row">
                <div class="input-field col s12">
                  <input id="request_title" type="text" class="validate" name="request_title" placeholder="Enter comments for your tutor">
                </div>
              </div>
            </form>
          </div>

          <div class="row accept-rejection">
            <a id="btn-accept-offer" class="waves-effect waves-light btn col s6" type="submit" value="Login">Confirm Tutoring Session</a>
            <a id="btn-reject-offer" class="waves-effect waves-light btn col s6 red lighten-2" type="submit" value="Login">Reject Tutoring Session</a>
          </div>


      </div>
    </div>


    <!-- END container -->
    </div>

