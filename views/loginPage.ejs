      </div>

      <%= message %>
      <div class="row">
        <div class="form-container">
          <form class="col s4 offset-s4 form z-depth-2" action="/gTutor/login" method="post">

            <div class="row">
              <div id="form-top-row" class="input-field col s12">
                <input id="email" type="email" class="validate" name="email" placeholder="email">
                <label for="email">Email</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" class="validate" name="password" placeholder="password">
                <label for="password">Password</label>
              </div>
            </div>

            <div class="row">
              <button id="btn-login" class="waves-effect waves-light btn col s12" type="submit" value="Login">Login</button>
            </div>

          </form>
        </div>
      </div>
    <!-- END container -->
    </div>

