  <body>
    <nav class="nav-wrapper">
        <div id="nav-img" class="brand-logo center"></div>
        <div class="nav-heading">
          <h1 id="nav-heading" class="brand-logo center">gTutor</h1>
        </div>
    </nav>

    <div class="container">
      <div class="row">
        <div id="body-heading" class="center-align">
          <h3>Create a free gTutor account below</h3>
        </div>
      </div>

      <div class="row">
        <div id="learn" class="center-align white-text">
          <h5>gTutor Registration Form</h5>
        </div>
      </div>


      <div class="row">
        <div class="form-container">
          <form class="col s8 offset-s2 form z-depth-2" action="/gTutor/register" method="post">

            <div class="row">
              <div id="form-top-row" class="input-field col s6">
                <input id="first_name" type="text" class="validate" name="first_name" placeholder="First Name">
                <label for="first_name">First Name</label>
              </div>

              <div id="form-top-row" class="input-field col s6">
                <input id="last_name" type="text" class="validate" name="last_name" placeholder="Last Name">
                <label for="last_name">Last Name</label>
              </div>
            </div>

            <div class="row">
              <!-- <div class="input-field col s6">
                <input id="campus" type="text" class="validate" name="campus" placeholder="Campus">
                <label for="campus">Campus</label>
              </div> -->
              <div class="input-field col s6">
                <select name="campus">
                  <option value="0" selected>Select your campus</option>
                  <option value="1">Austin, TX</option>
                  <option value="2">Boulder, CO</option>
                  <option value="3">Denver, CO (Golden Triangle)</option>
                  <option value="4">Denver, CO (Platte)</option>
                  <option value="5">New York City, NY</option>
                  <option value="6">Phoenix, AZ</option>
                  <option value="7">San Francisco, CA</option>
                  <option value="8">Seattle, WA</option>
                </select>
                <label>Campus</label>
              </div>

              <!-- <div class="input-field col s4">
                <input id="gStatus" type="text" class="validate" name="gStatus" placeholder="gStatus">
                <label for="gStatus">gStatus</label>
              </div> -->
              <div class="input-field col s4">
                <select name="type">
                  <option value="0" selected>Select your gStatus</option>
                  <option value="1">Student</option>
                  <option value="2">Alumni</option>
                  <option value="3">Instructor</option>
                  <option value="4">Mentor</option>
                </select>
                <label>gStatus</label>
              </div>

              <div class="input-field col s2">
                <input id="cohort" type="text" class="validate" name="cohort" placeholder="Cohort">
                <label for="cohort">Cohort</label>
              </div>

            </div>

            <div class="row">
              <div class="input-field col s6">
                <input id="email" type="email" class="validate" name="email" placeholder="email">
                <label for="email">Email</label>
              </div>
              <div class="input-field col s6">
                <input id="password" type="password" class="validate" name="password" placeholder="create a password">
                <label for="password">Password</label>
              </div>
            </div>

            <div class="row">
              <button id="btn-registration" class="waves-effect waves-light btn col s12" type="submit" value="Login">Submit Registration</button>
            </div>

          </form>
        </div>
      </div>
    <!-- END container -->
    </div>

