<% include ../partials/header %>
<link rel="stylesheet" href="/css/style_login.css">

    <div class="container">
      <div class="row">
        <div id="body-heading" class="center-align">
          <h3>Create your free gTutor account below</h3>
        </div>
      </div>

      <div class="row">
        <div id="learn" class="center-align white-text">
          <h5>gTutor Registration Form</h5>
        </div>
      </div>


      <div class="row">
        <div class="form-container">
          <form class="col s8 offset-s2 form z-depth-2" action="/gTutor/register" method="post">

            <div class="row">
              <div id="form-top-row" class="input-field col s6">
                <input id="first_name" type="text" class="validate white-text" name="first_name" placeholder="First Name">
                <label for="first_name">First Name</label>
              </div>

              <div id="form-top-row" class="input-field col s6">
                <input id="last_name" type="text" class="validate white-text" name="last_name" placeholder="Last Name">
                <label for="last_name">Last Name</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <select class="white-text" name="campus">
                  <option disabled selected>Select your campus</option>
                  <option value="Austin, TX">Austin, TX</option>
                  <option value="Boulder, CO">Boulder, CO</option>
                  <option value="Denver, CO (Golden Triangle)">Denver, CO (Golden Triangle)</option>
                  <option value="Denver, CO (Platte)">Denver, CO (Platte)</option>
                  <option value="New York City, NY">New York City, NY</option>
                  <option value="Phoenix, AZ">Phoenix, AZ</option>
                  <option value="San Francisco, CA">San Francisco, CA</option>
                  <option value="Seattle, WA">Seattle, WA</option>
                </select>
                <label>Campus</label>
              </div>

              <div class="input-field col s4">
                <select class="white-text" name="type">
                  <option disabled selected>Select your gStatus</option>
                  <option value="Student">Student</option>
                  <option value="Alumni">Alumni</option>
                  <option value="Instructor">Instructor</option>
                  <option value="Mentor">Mentor</option>
                </select>
                <label>gStatus</label>
              </div>

              <div class="input-field col s2">
                <input id="cohort" type="text" class="validate white-text" name="cohort" placeholder="Cohort">
                <label for="cohort">Cohort</label>
              </div>

            </div>

            <div class="row">
              <div class="input-field col s6">
                <input id="email" type="email" class="validate white-text" name="email" placeholder="email">
                <label for="email">Email</label>
              </div>
              <div class="input-field col s6">
                <input id="password" type="password" class="validate white-text" name="password" placeholder="create a password">
                <label for="password">Password</label>
              </div>
            </div>

            <div class="row">
              <button id="btn-registration" class="waves-effect waves-light btn col s12" type="submit" value="Login">Submit Registration</button>
            </div>

          </form>
        </div>
      </div>
    <!-- END container -->
    </div>

